---
const { data } = Astro.props
---

<section id="about" class="min-h-[calc(60vh-120px)] py-4">
  <div class="max-w-4xl mx-auto px-4">
    <h2 id="me" class="text-3xl font-bold text-white/90 flex items-center my-10">
      <span class="text-secondary mr-2">03.</span> About Me
      <span class="flex-1 h-px bg-white/20 ml-4"></span>
    </h2>
    <div class="space-y-5 text-lg text-white/70 leading-relaxed">
      {data.map((paragraph: string) => (
        <p class="about-paragraph">
          {paragraph}
        </p>
      ))}
    </div>
  </div>
</section>
<script>
  import { gsap } from 'gsap'
  import { ScrollTrigger } from 'gsap/ScrollTrigger'
  import { SplitText } from 'gsap/SplitText';
  gsap.registerPlugin(ScrollTrigger, SplitText);
  const split = new SplitText('.about-paragraph', { type: 'lines, words' });
  gsap.from('#me', {
    scrollTrigger: {
      trigger: '#pj',
      start: 'top 100%',
    },
    opacity: 0,
    y: 50,
    duration: 0.7,
  });
  gsap.from(split.lines, {
    duration: 0.5,
    y: 150,
    stagger: 0.1,
    autoAlpha: 0,
    ease: 'expo',
    scrollTrigger: {
      trigger: '#about',
      start: 'top 100%',
    },
  });


</script>
