---
const { href } = Astro.props
const extraClasses = Astro.props.extraClasses || ''
---
<a href={href} target="_blank" class={`relative inline-block ${extraClasses}`}>
  <div class="absolute w-full h-full bg-secondary rounded-md z-0"></div>
  <div
    class="relative flex z-10 px-6 py-2 font-semibold text-secondary border-2 border-secondary bg-background rounded-md
        transition-transform duration-200 hover:-translate-1">
    <slot />
  </div>
</a>
